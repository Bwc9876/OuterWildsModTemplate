{
  "$schema": "http://json.schemastore.org/template",
  "author": "Bwc9876",
  "classifications": [
    "Library"
  ],
  "name": "Outer Wilds Mod",
  "defaultName": "OuterWildsMod",
  "identity": "Bwc9876.OW.ModTemplate.CSharp",
  "groupIdentity": "Bwc9876.OW.ModTemplate",
  "shortName": "OuterWildsMod",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "$safeprojectname$",
  "sources": [
    {
      "source": "./",
      "target": "./",
      "include": [
        "**/*",
        "**/*.csproj.user"
      ],
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**/*",
        "**/*.filelist",
        "**/*.lock.json",
        "**/.gitignore",
        ".github/**",
      ]
    },
    {
      "source": "./",
      "target": "../",
      "include": [
        "**/.gitignore",
        ".github/**"
      ]
    }
  ],
  "preferNameDirectory": true,
  "symbols": {
    "AuthorName": {
      "type": "parameter",
      "displayName": "Author Name",
      "defaultValue": "Ernesto",
      "datatype": "string",
      "replaces": "$username$",
      "description": "Author of this mod (no spaces!)"
    },
	"year": {
	  "type": "generated",
	  "generator": "now",
	  "parameters": {
		  "format": "yyyy"
	  },
	  "replaces": "$year$"
	},
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    }
  },
  "postActions": [
    {
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}